@using MathGamesApp.Core.Models.Problem

@model IEnumerable<DifficultyLevelsViewModel>

<h1>Choose a difficulty level for addition problems</h1>

@foreach(var level in Model)
{
    <a asp-controller="Problem" asp-action="AdditionProblems" asp-route-difficultyLevelId="@level.Id">
        <input type="submit" value="@level.Name" />
    </a>
}

